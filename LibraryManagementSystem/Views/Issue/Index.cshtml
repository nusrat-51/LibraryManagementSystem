@model LibraryManagementSystem.ViewModels.Librarian.IssuePageVM

@{
    Layout = "~/Views/Shared/_LibrarianLayout.cshtml";
    ViewData["Title"] = "Issue & Return Books";
}

<div class="dashboard-page">
    <h1 class="page-title">Issue & Return Books</h1>

    @if (TempData["IssueMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["IssueMessage"]
        </div>
    }
    @if (TempData["IssueError"] != null)
    {
        <div class="alert alert-danger">
            @TempData["IssueError"]
        </div>
    }

    <!-- AVAILABLE BOOKS -->
    <div class="card mb-4">
        <div class="card-body">
            <h2 class="section-title">Available Books</h2>
            <p class="text-muted">Issue a book to a student using their email address.</p>

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Category</th>
                            <th>Available</th>
                            <th style="width: 260px;">Issue To</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var b in Model.AvailableBooks)
                        {
                            <tr>
                                <td>@b.Title</td>
                                <td>@b.Author</td>
                                <td>@b.Category</td>
                                <td>@b.AvailableCopies</td>
                                <td>
                                    <form asp-action="IssueBook" method="post" class="d-flex gap-2">
                                        <input type="hidden" name="bookId" value="@b.Id" />
                                        <input type="email"
                                               name="studentEmail"
                                               class="form-control"
                                               placeholder="student@email.com"
                                               required />
                                        <button type="submit" class="btn btn-primary btn-sm">
                                            Issue
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- CURRENT ISSUES -->
    <div class="card">
        <div class="card-body">
            <h2 class="section-title">Current Issued Books</h2>

            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Book</th>
                            <th>Student</th>
                            <th>Issued On</th>
                            <th>Status</th>
                            <th style="width: 120px;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model.ActiveIssues)
                        {
                            <tr>
                                <td>@i.Book?.Title</td>
                                <td>@i.StudentEmail</td>
                                <td>@i.IssueDate.ToLocalTime().ToString("dd MMM yyyy")</td>
                                <td>@i.Status</td>
                                <td>
                                    <form asp-action="ReturnBook" method="post">
                                        <input type="hidden" name="issueId" value="@i.Id" />
                                        <button type="submit" class="btn btn-outline-success btn-sm">
                                            Mark Returned
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
