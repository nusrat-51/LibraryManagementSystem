@model LibraryManagementSystem.ViewModels.Librarian.IssuePageVM

@{
    Layout = "~/Views/Shared/_LibrarianLayout.cshtml";
    ViewData["Title"] = "Issue & Return Books";
}

<div class="dashboard-page">
    <h1 class="page-title mb-4">Issue & Return Books</h1>

    @if (TempData["IssueMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["IssueMessage"]
        </div>
    }

    @if (TempData["IssueError"] != null)
    {
        <div class="alert alert-danger">
            @TempData["IssueError"]
        </div>
    }

    <div class="row g-3">
        <!-- ISSUE FORM -->
        <div class="col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">Issue a Book</h5>
                </div>
                <div class="card-body">
                    <form asp-action="IssueBook" asp-controller="Issue" method="post">
                        <div class="mb-3">
                            <label class="form-label">Student Email</label>
                            <input type="email"
                                   name="studentEmail"
                                   class="form-control"
                                   placeholder="student@example.com"
                                   required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Select Book</label>
                            <select name="bookId" class="form-select" required>
                                <option value="">-- Choose a book --</option>
                                @foreach (var b in Model.AvailableBooks)
                                {
                                    <option value="@b.Id">
                                        @b.Title (@b.AvailableCopies available)
                                    </option>
                                }
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            Issue Book
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- ACTIVE ISSUES TABLE -->
        <div class="col-lg-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Currently Issued Books</h5>
                    <small class="text-muted">@Model.ActiveIssues.Count active</small>
                </div>
                <div class="card-body">
                    @if (!Model.ActiveIssues.Any())
                    {
                        <p class="text-muted mb-0">No active issues at the moment.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th>Book</th>
                                        <th>Student Email</th>
                                        <th>Issued On</th>
                                        <th>Status</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var i in Model.ActiveIssues)
                                    {
                                        <tr>
                                            <td>@i.Book?.Title</td>
                                            <td>@i.StudentEmail</td>
                                            <td>@i.IssueDate.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <span class="badge bg-warning text-dark">
                                                    @i.Status
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                <form asp-action="ReturnBook"
                                                      asp-controller="Issue"
                                                      method="post"
                                                      class="d-inline">
                                                    <input type="hidden" name="issueId" value="@i.Id" />
                                                    <button type="submit" class="btn btn-outline-success btn-sm">
                                                        Mark Returned
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
