@model IEnumerable<LibraryManagementSystem.Models.Book>

@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/dashboard.css" />

<div class="layout">
    <aside class="sidebar">
        <div class="brand">
            <span class="brand-logo">📚</span>
            <span class="brand-name">LMS</span>
        </div>
        <nav class="menu">
            <a href="/Student/Dashboard" class="menu-item">Dashboard</a>
            <a href="/Student/Books" class="menu-item active">View Books</a>
            <a href="/Student/MyIssues" class="menu-item">My Issued Books</a>
            <a href="/Student/Profile" class="menu-item">Profile</a>
            <a href="/Account/Logout" class="menu-item">Logout</a>
        </nav>
    </aside>

    <div class="main">
        <header class="topbar">
            <h1 class="page-title">Available Books</h1>
        </header>

        <main class="content">
            <div class="table-wrapper">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Category</th>
                            <th>Available</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var b in Model)
                        {
                            <tr>
                                <td>@b.Id</td>
                                <td>@b.Title</td>
                                <td>@b.Author</td>
                                <td>@b.Category</td>
                                <td>@b.AvailableCopies</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</div>
