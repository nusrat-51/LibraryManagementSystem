@model IEnumerable<LibraryManagementSystem.Models.Book>

@{
    ViewData["Title"] = "Available Books";
}

<h2>Available Books</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Total Copies</th>
            <th>Available</th>
            <th>Issue</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Title</td>
                <td>@b.Author</td>
                <td>@b.Category</td>
                <td>@b.TotalCopies</td>
                <td>@b.AvailableCopies</td>
                <td>
                    @if (b.AvailableCopies > 0)
                    {
                        <form method="post" action="/Issue/IssueBook?bookId=@b.Id">
                            <button class="btn btn-primary btn-sm">Issue</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-danger">Not Available</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
