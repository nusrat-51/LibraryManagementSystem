@model IEnumerable<LibraryManagementSystem.Models.BookApplication>

@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewData["Title"] = "My Applications";
}

<h2 class="page-title">My Applications</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card">
    <div class="card-body">
        @if (Model == null || !Model.Any())
        {
            <div class="text-muted">No applications yet.</div>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Book</th>
                        <th>Issue Date</th>
                        <th>Return Date</th>
                        <th>Applied At</th>
                        <th style="width:160px;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in Model)
                    {
                        <tr>
                            <td>@a.Id</td>
                            <td>@(a.Book?.Title ?? ("Book #" + a.BookId))</td>
                            <td>@a.IssueDate.ToString("yyyy-MM-dd")</td>
                            <td>@a.ReturnDate.ToString("yyyy-MM-dd")</td>
                            <td>@a.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <a asp-controller="Student"
                                   asp-action="EditApplication"
                                   asp-route-id="@a.Id"
                                   class="menu-item"
                                   style="display:inline-block; width:auto; padding:0.35rem 0.7rem; border:1px solid var(--border-soft); border-radius:0.5rem;">
                                    Edit Dates
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
