@model IEnumerable<LibraryManagementSystem.Models.IssueRecord>

@{
    ViewData["Title"] = "My Issued Books";
}

<h2>My Issued Books</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Book ID</th>
            <th>Issued On</th>
            <th>Status</th>
            <th>Return Date</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var issue in Model)
        {
            <tr>
                <td>@issue.BookId</td>
                <td>@issue.IssueDate.ToShortDateString()</td>
                <td>@issue.Status</td>
                <td>
                    @(issue.ReturnDate.HasValue
                                    ? issue.ReturnDate.Value.ToShortDateString()
                                    : "Not Returned")
                </td>
                <td>
                    @if (issue.Status == "Issued")
                    {
                        <!-- ekhane IssueRecordId na, ekhon property er nam Id -->
                        <form method="post" action="/Issue/ReturnBook?issueId=@issue.Id">
                            <button class="btn btn-warning btn-sm">Return</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-success">Returned</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
