@model IEnumerable<LibraryManagementSystem.Models.IssueRecord>

@{
    ViewData["Title"] = "My Issued Books";
}

<h2>My Issued Books</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Book</th>
            <th>Issued On</th>
            <th>Status</th>
            <th>Return Date</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var issue in Model)
        {
            <tr>
                <td>@issue.Book?.Title</td>
                <td>@issue.IssueDate.ToString("dd MMM yyyy")</td>
                <td>@issue.Status</td>
                <td>@(issue.ReturnDate?.ToString("dd MMM yyyy") ?? "-")</td>
                <td>
                    @* later you can add "Details" or "Renew" buttons *@
                </td>
            </tr>
        }
    </tbody>
</table>