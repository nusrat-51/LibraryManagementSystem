@model IEnumerable<LibraryManagementSystem.Models.IssueRecord>

@{
    ViewData["Title"] = "My Issues";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<h2 class="page-title">My Issue Records</h2>

<div class="card">
    <div class="card-body">
        @if (Model == null || !Model.Any())
        {
            <div class="text-muted">No issue records found.</div>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Book</th>
                        <th>Issued On</th>
                        <th>Return Date</th>
                        <th>Status</th>
                        <th>Fine</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>@(i.Book?.Title ?? "N/A")</td>
                            <td>@i.IssueDate.ToString("yyyy-MM-dd")</td>
                            <td>@(i.ReturnDate.HasValue? i.ReturnDate.Value.ToString("yyyy-MM-dd") : "-")</td>
                            <td>@i.Status</td>
                            <td>@i.FineAmount.ToString("0.00")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
