@@model IEnumerable<LibraryManagementSystem.ViewModels.Student.MyIssueVM>

@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewData["Title"] = "My Issued Books";
}


<h2>My Issued Books</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Book</th>
            <th>Issued On</th>
            <th>Status</th>
            <th>Return Date</th>
            <th>Action</th>
        </tr>
    </thead>

  <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@item.BookTitle</td>
        <td>@item.IssueDate.ToShortDateString()</td>
        <td>@item.Status</td>
        <td>@(item.ReturnDate?.ToShortDateString() ?? "-")</td>
        <td>@item.FineAmount.ToString("0.00")</td>
    </tr>
}
</tbody>
