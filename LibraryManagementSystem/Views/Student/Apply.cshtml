@model LibraryManagementSystem.Models.BookApplication

@{
    ViewData["Title"] = "Apply For Book";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<div class="dashboard-page">

    <h1 class="page-title mb-4">Apply For Book</h1>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            Please fix the errors below.
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="card-title mb-0">Book Application</h5>
            <small class="text-muted">Confirm book details and select dates</small>
        </div>

        <div class="card-body">
            <form asp-action="Apply" method="post">
                @Html.AntiForgeryToken()

                <!-- Hidden fields -->
                <input type="hidden" asp-for="BookId" />
                <input type="hidden" asp-for="StudentId" />

                <!-- Book Details (Read-only) -->
                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Book Title</label>
                        <input type="text"
                               class="form-control"
                               value="@Model.Book?.Title"
                               readonly />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Author</label>
                        <input type="text"
                               class="form-control"
                               value="@Model.Book?.Author"
                               readonly />
                    </div>
                </div>

                <!-- Student Info -->
                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Student ID</label>
                        <input type="text"
                               class="form-control"
                               value="@Model.StudentId"
                               readonly />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Book ID</label>
                        <input type="text"
                               class="form-control"
                               value="@Model.BookId"
                               readonly />
                    </div>
                </div>

                <!-- Dates -->
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label asp-for="IssueDate" class="form-label"></label>
                        <input asp-for="IssueDate"
                               type="date"
                               class="form-control" />
                        <span asp-validation-for="IssueDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ReturnDate" class="form-label"></label>
                        <input asp-for="ReturnDate"
                               type="date"
                               class="form-control" />
                        <span asp-validation-for="ReturnDate" class="text-danger"></span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        Submit Application
                    </button>

                    <a asp-action="Dashboard" class="btn btn-secondary">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
