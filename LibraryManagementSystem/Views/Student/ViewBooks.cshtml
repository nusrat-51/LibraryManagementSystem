@model IEnumerable<LibraryManagementSystem.Models.Book>

@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewData["Title"] = "Available Books (Read-only)";
}


<h2>Available Books (Read-only)</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Total Copies</th>
            <th>Available</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Category</td>
                <td>@book.TotalCopies</td>
                <td>@book.AvailableCopies</td>
            </tr>
        }
    </tbody>
</table>
