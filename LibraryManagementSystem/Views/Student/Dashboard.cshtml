@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/dashboard.css" />

<div class="layout">

    @* Sidebar *@
    <aside class="sidebar">
        <div class="brand">
            <span class="brand-logo">📚</span>
            <span class="brand-name">LMS</span>
        </div>
        <nav class="menu">
            <a href="/Student/Dashboard" class="menu-item active">Dashboard</a>
            <a href="/Student/Books" class="menu-item">View Books</a>
            <a href="/Student/MyIssues" class="menu-item">My Issued Books</a>
            <a href="/Student/Profile" class="menu-item">Profile</a>
            <a href="/Account/Logout" class="menu-item">Logout</a>
        </nav>
    </aside>

    <div class="main">
        <header class="topbar">
            <h1 class="page-title">Student Dashboard</h1>
        </header>

        <main class="content">
            <section class="cards">
                <div class="card">
                    <p class="card-label">Total Books</p>
                    <p class="card-value">@ViewBag.TotalBooks</p>
                </div>

                <div class="card">
                    <p class="card-label">Books Issued to You</p>
                    <p class="card-value">@ViewBag.ActiveIssues</p>
                </div>

                <div class="card">
                    <p class="card-label">Overdue Books</p>
                    <p class="card-value danger">@ViewBag.Overdue</p>
                </div>
            </section>

            <p>Welcome, student! Use the menu to view books and your issue history.</p>
        </main>

        <footer class="footer">
            © 2025 Library Management System
        </footer>
    </div>
</div>
