@model LibraryManagementSystem.Models.LoginViewModel
@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/login.css" />

<div class="login-page">
    <div class="login-card">
        <div class="login-icon">📚</div>
        <h2 class="login-title">Library Management System</h2>
        <p class="login-subtitle">Sign in to continue</p>

        <form asp-action="Login" asp-controller="Account" method="post">
            <div class="form-row">
                <label>Email</label>
                <input asp-for="Email" type="email" placeholder="Enter email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-row">
                <label>Password</label>
                <input asp-for="Password" type="password" placeholder="Enter password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SelectedRole">Login as</label>
                <select asp-for="SelectedRole" class="form-control">
                    <option value="Student">Student</option>
                    <option value="Librarian">Librarian</option>
                    <option value="Admin">Admin</option>
                </select>
                <span asp-validation-for="SelectedRole" class="text-danger"></span>
            </div>

            <div class="form-row">
                <button type="submit" class="btn-primary">Login</button>
            </div>

            <div class="validation">
                @Html.ValidationSummary()
            </div>
        </form>
        <p class="login-footer">
            New student?
            <a asp-action="Register" asp-controller="Account">Create an account</a>
        </p>


        <p class="login-footer">© 2025 Library Management System</p>
    </div>
</div>
