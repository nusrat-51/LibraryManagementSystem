    <div class="main">


        <header class="topbar">
            <h1 class="page-title">Manage Books</h1>

            <div class="topbar-right">
                <div class="search-box">
                    <input type="text" placeholder="Search books..." />
                </div>
                <div class="user-badge">
                    <div class="avatar">A</div>
                    <div class="user-info">
                        <span class="user-name">Admin</span>
                        <span class="user-role">Librarian</span>
                    </div>
                </div>
            </div>
        </header>


        <main class="content">


            <section class="panel">
                <div class="panel-header">
                    <h2>Add / Edit Book</h2>
                    <div class="panel-actions">
                        <button class="btn outline" type="button">Clear</button>
                        <button class="btn primary" type="button">Save Book</button>
                    </div>
                </div>

                <form class="form-grid">
                    <div class="form-group">
                        <label for="bookId">Book ID</label>
                        <input type="text" id="bookId" placeholder="e.g. B1023" />
                    </div>

                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" id="title" placeholder="Book title" required />
                    </div>

                    <div class="form-group">
                        <label for="author">Author</label>
                        <input type="text" id="author" placeholder="Author name" required />
                    </div>

                    <div class="form-group">
                        <label for="category">Category</label>
                        <select id="category">
                            <option>Computer Science</option>
                            <option>Mathematics</option>
                            <option>Physics</option>
                            <option>Literature</option>
                            <option>History</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="isbn">ISBN</label>
                        <input type="text" id="isbn" placeholder="978-xxxxxxxxxx" />
                    </div>

                    <div class="form-group">
                        <label for="publisher">Publisher</label>
                        <input type="text" id="publisher" />
                    </div>

                    <div class="form-group">
                        <label for="year">Publish Year</label>
                        <input type="number" id="year" min="1900" max="2100" />
                    </div>

                    <div class="form-group">
                        <label for="copies">Total Copies</label>
                        <input type="number" id="copies" min="1" />
                    </div>

                    <div class="form-group">
                        <label for="shelf">Shelf Location</label>
                        <input type="text" id="shelf" placeholder="e.g. A-03-2" />
                    </div>

                    <div class="form-group">
                        <label for="status">Status</label>
                        <select id="status">
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                        </select>
                    </div>
                </form>
            </section>


            <section class="panel books-panel">
                <div class="panel-header">
                    <h2>Book List</h2>
                    <div class="filter-bar">
                        <select>
                            <option value="">All categories</option>
                            <option>Computer Science</option>
                            <option>Mathematics</option>
                            <option>Physics</option>
                            <option>Literature</option>
                        </select>
                        <select>
                            <option value="">All status</option>
                            <option>Active</option>
                            <option>Inactive</option>
                        </select>
                    </div>
                </div>

                <div class="table-wrapper">
                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Category</th>
                                <th>Copies</th>
                                <th>Available</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>B1023</td>
                                <td>Introduction to Algorithms</td>
                                <td>Cormen et al.</td>
                                <td>Computer Science</td>
                                <td>10</td>
                                <td>4</td>
                                <td><span class="badge success">Active</span></td>
                                <td>
                                    <button class="btn-table">Edit</button>
                                    <button class="btn-table danger">Delete</button>
                                </td>
                            </tr>
                            <tr>
                                <td>B0875</td>
                                <td>Data Structures in C</td>
                                <td>Reema Thareja</td>
                                <td>Computer Science</td>
                                <td>6</td>
                                <td>1</td>
                                <td><span class="badge success">Active</span></td>
                                <td>
                                    <button class="btn-table">Edit</button>
                                    <button class="btn-table danger">Delete</button>
                                </td>
                            </tr>
                            <tr>
                                <td>B0551</td>
                                <td>World History</td>
                                <td>J. Roberts</td>
                                <td>History</td>
                                <td>4</td>
                                <td>0</td>
                                <td><span class="badge warning">Inactive</span></td>
                                <td>
                                    <button class="btn-table">Edit</button>
                                    <button class="btn-table danger">Delete</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>

        </main>

