@using LibraryManagementSystem.Models
@model Reservation

@{
    ViewData["Title"] = "Reservation Details";
}

<h2>Reservation Details</h2>

<dl class="row">
    <dt class="col-sm-2">Book</dt>
    <dd class="col-sm-10">@Model.Book?.Title</dd>

    <dt class="col-sm-2">Student Email</dt>
    <dd class="col-sm-10">@Model.StudentEmail</dd>

    <dt class="col-sm-2">Requested At</dt>
    <dd class="col-sm-10">@Model.RequestedAt</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>

    <dt class="col-sm-2">Queue Position</dt>
    <dd class="col-sm-10">@Model.QueuePosition</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
