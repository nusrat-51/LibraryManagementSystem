@using LibraryManagementSystem.Models
@model Reservation

@{
    ViewData["Title"] = "Delete Reservation";
}

<h2>Delete Reservation</h2>

<h4>Are you sure you want to delete this reservation?</h4>

<dl class="row">
    <dt class="col-sm-2">Book</dt>
    <dd class="col-sm-10">@Model.Book?.Title</dd>

    <dt class="col-sm-2">Student Email</dt>
    <dd class="col-sm-10">@Model.StudentEmail</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
