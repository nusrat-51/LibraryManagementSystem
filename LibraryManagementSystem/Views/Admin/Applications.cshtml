@model IEnumerable<LibraryManagementSystem.Models.BookApplication>

@{
    ViewData["Title"] = "Applications";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">All Book Applications</h3>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow-sm">
    <div class="card-body">
        @if (Model == null || !Model.Any())
        {
            <div class="text-muted">No applications found.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Book</th>
                            <th>Student Email</th>
                            <th>Issue Date</th>
                            <th>Return Date</th>
                            <th>Status</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in Model)
                        {
                            <tr>
                                <td>@(a.Book?.Title ?? "N/A")</td>
                                <td>@a.StudentEmail</td>
                                <td>@a.IssueDate.ToString("yyyy-MM-dd")</td>
                                <td>@a.ReturnDate.ToString("yyyy-MM-dd")</td>
                                
                                <td class="text-end">
                                    <form asp-controller="Admin"
                                          asp-action="DeleteApplication"
                                          asp-route-id="@a.Id"
                                          method="post"
                                          onsubmit="return confirm('Delete this application?');"
                                          class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
