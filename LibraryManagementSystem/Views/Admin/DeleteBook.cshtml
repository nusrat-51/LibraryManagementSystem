@model LibraryManagementSystem.Models.Book
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="page-title">Delete Book</h2>

<div class="alert alert-warning">
    Are you sure you want to delete <b>@Model.Title</b>?
</div>

<form asp-action="DeleteBookConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Books" class="btn btn-secondary">Cancel</a>
</form>
