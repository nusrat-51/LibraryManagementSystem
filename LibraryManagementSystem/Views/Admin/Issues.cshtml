@model IEnumerable<LibraryManagementSystem.Models.IssueRecord>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="page-title">All Issue Records</h2>

<div class="card">
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Book</th>
                    <th>Student Email</th>
                    <th>Issued On</th>
                    <th>Status</th>
                    <th>Fine</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    <tr>
                        <td>@i.Book?.Title</td>
                        <td>@i.StudentEmail</td>
                        <td>@i.IssueDate.ToString("yyyy-MM-dd")</td>
                        <td>@i.Status</td>
                        <td>@i.FineAmount.ToString("0.00")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
