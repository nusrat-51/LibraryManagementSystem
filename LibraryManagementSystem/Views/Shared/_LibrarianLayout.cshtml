@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />

<div class="layout" data-theme="light">
    <aside class="sidebar">
        <div class="brand">
            <span class="brand-logo">📚</span>
            <span class="brand-name">LMS</span>
        </div>

        <nav class="menu">
            <a asp-controller="Librarian" asp-action="Dashboard" class="menu-item">
                Dashboard
            </a>

            <a asp-controller="Librarian" asp-action="ManageBooks" class="menu-item">
                Books
            </a>

            <a asp-controller="Librarian" asp-action="Issues" class="menu-item">
                Issues
            </a>

            <a asp-controller="Librarian" asp-action="Returns" class="menu-item">
                Returns
            </a>

            <a asp-controller="Librarian" asp-action="Reservations" class="menu-item">
                Reservations
            </a>

            <a asp-controller="Account" asp-action="Logout" class="menu-item">
                Logout
            </a>
        </nav>

        <div class="theme-section">
            <div class="theme-label">Theme</div>
            <button id="themeToggle" class="theme-toggle-button">
                Light / Dark
            </button>
        </div>
    </aside>

    <div class="main">
        @RenderBody()
    </div>
</div>

<footer class="footer">
    © 2025 Library Management System
</footer>
