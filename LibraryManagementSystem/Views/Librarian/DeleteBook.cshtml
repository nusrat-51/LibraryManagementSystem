@model LibraryManagementSystem.Models.Book

<h2>Delete Book</h2>

<p>Are you sure you want to delete this book?</p>

<ul>
    <li><strong>@Model.Title</strong></li>
    <li>@Model.Author</li>
    <li>@Model.Category</li>
</ul>

<form asp-action="DeleteBook" method="post">
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger" type="submit">Delete</button>
    <a class="btn btn-secondary" asp-action="ManageBooks">Cancel</a>
</form>
