@model LibraryManagementSystem.Models.Book

<h2>Edit Book</h2>

<form asp-action="EditBook" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Author</label>
        <input asp-for="Author" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Category</label>
        <input asp-for="Category" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Total Copies</label>
        <input asp-for="TotalCopies" type="number" class="form-control" required />
    </div>

    <button class="btn btn-primary mt-3" type="submit">Update</button>
    <a class="btn btn-secondary mt-3" asp-action="ManageBooks">Back</a>
</form>
