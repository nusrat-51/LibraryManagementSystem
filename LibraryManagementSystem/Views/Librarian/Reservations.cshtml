@model List<LibraryManagementSystem.Models.Reservation>
@{
    Layout = "~/Views/Shared/_LibrarianLayout.cshtml";
    ViewData["Title"] = "Reservations";
}

<h2 class="mb-3">Reservations</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow-sm">
    <div class="card-body">
        @if (Model == null || !Model.Any())
        {
            <div class="text-muted">No reservations found.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Reservation ID</th>
                            <th>Book</th>
                            <th>Student</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int sl = 1;
                        }

                        @foreach (var r in Model)
                        {
                            <tr>
                                <td>@sl</td>
                                <td>@r.Id</td>
                                <td>@(r.Book?.Title ?? ("Book #" + r.BookId))</td>
                                <td>@r.StudentEmail</td>
                            </tr>

                            sl++;
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
