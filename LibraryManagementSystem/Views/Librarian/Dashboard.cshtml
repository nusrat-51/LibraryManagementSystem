@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />


<div class="layout">

    <aside class="sidebar">
        <div class="brand">
            <span class="brand-logo">📚</span>
            <span class="brand-name">LMS</span>
        </div>

        <nav class="menu">
            <a href="/Librarian/Dashboard" class="menu-item active">Dashboard</a>
           <a href="/Librarian/ManageBooks" class="menu-item">Books</a>

            <a href="/Issue/Index" class="menu-item">Issues</a>
            <a href="/Return/Index" class="menu-item">Returns</a>
            <a href="/Reservation/Index" class="menu-item">Reservations</a>
            <a href="/Account/Logout" class="menu-item">Logout</a>
        </nav>
    </aside>

    <div class="main">
        <header class="topbar">
            <h1 class="page-title">Librarian Dashboard</h1>

            <div class="topbar-right">
                <div class="search-box">
                    <input type="text" placeholder="Search books, members..." />
                </div>
                <div class="user-badge">
                    <div class="avatar">L</div>
                    <div class="user-info">
                        <span class="user-name">Librarian</span>
                        <span class="user-role">Librarian</span>
                    </div>
                </div>
            </div>
        </header>

        <main class="content">

            <!-- Top Cards -->
            <section class="cards">
                <div class="card">
                    <p class="card-label">Total Books</p>
                    <p class="card-value">1,240</p>
                    <p class="card-sub">All books in the library</p>
                </div>
                <div class="card">
                    <p class="card-label">Issued Today</p>
                    <p class="card-value">32</p>
                    <p class="card-sub">Books issued on current day</p>
                </div>
                <div class="card">
                    <p class="card-label">Overdue Books</p>
                    <p class="card-value danger">18</p>
                    <p class="card-sub">Pending returns with fine</p>
                </div>
                <div class="card">
                    <p class="card-label">Reservations</p>
                    <p class="card-value">12</p>
                    <p class="card-sub">Active reservations</p>
                </div>
            </section>

            <!-- Recent Issues + Overdues -->
            <section class="grid-two">
                <div class="panel">
                    <div class="panel-header">
                        <h2>Recent Issued Books</h2>
                        <a href="/Issue/Index" class="link-small">View all</a>
                    </div>
                    <div class="table-wrapper">
                        <table>
                            <thead>
                                <tr>
                                    <th>Issue ID</th>
                                    <th>Member</th>
                                    <th>Book</th>
                                    <th>Due Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>ISU-2001</td>
                                    <td>Ali Khan</td>
                                    <td>Clean Code</td>
                                    <td>24 Nov 2025</td>
                                    <td><span class="badge success">Issued</span></td>
                                </tr>
                                <tr>
                                    <td>ISU-2002</td>
                                    <td>Sara Lee</td>
                                    <td>Database System Concepts</td>
                                    <td>23 Nov 2025</td>
                                    <td><span class="badge warning">Due Soon</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="panel">
                    <div class="panel-header">
                        <h2>Overdue & Fines</h2>
                        <a href="/Fine/Index" class="link-small">View fine report</a>
                    </div>
                    <div class="table-wrapper">
                        <table>
                            <thead>
                                <tr>
                                    <th>Member</th>
                                    <th>Book</th>
                                    <th>Days Late</th>
                                    <th>Fine</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Mary Ali</td>
                                    <td>Data Structures in C</td>
                                    <td>4</td>
                                    <td>120.00</td>
                                    <td><span class="badge danger">Unpaid</span></td>
                                </tr>
                                <tr>
                                    <td>Rahim Khan</td>
                                    <td>Operating System Concepts</td>
                                    <td>2</td>
                                    <td>60.00</td>
                                    <td><span class="badge warning">Partial</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>

            <!-- Quick Actions -->
            <section class="panel quick-actions">
                <div class="panel-header">
                    <h2>Quick Actions</h2>
                </div>
                <div class="actions-grid">
                    <a href="/Books/Index" class="action-card">
                        <h3>Manage Books</h3>
                        <p>Add, edit, or remove books.</p>
                    </a>
                    <a href="/Issue/Index" class="action-card">
                        <h3>Issue Book</h3>
                        <p>Issue books to members.</p>
                    </a>
                    <a href="/Return/Index" class="action-card">
                        <h3>Return Book</h3>
                        <p>Process book returns & fines.</p>
                    </a>
                    <a href="/Reservation/Index" class="action-card">
                        <h3>Manage Reservations</h3>
                        <p>Approve or cancel reservations.</p>
                    </a>
                </div>
            </section>
        </main>

        <footer class="footer">
            © 2025 Library Management System
        </footer>
    </div>
</div>
