@model LibraryManagementSystem.ViewModels.Librarian.LibrarianDashboardViewModel

@{
    Layout = "~/Views/Shared/_LibrarianLayout.cshtml";
    ViewData["Title"] = "Librarian Dashboard";
}

@if (Model == null)
{
    <div class="alert alert-danger">
        Dashboard model is null. Fix LibrarianController.Dashboard() to return View(model).
    </div>
    return;
}

<div class="dashboard-page">
    <h1 class="page-title mb-4">Librarian Dashboard</h1>

    <!-- TOP SUMMARY STATS -->
    <div class="row g-3 mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="card shadow-sm h-100 summary-card">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="text-muted mb-0">Total Books</h6>
                        <span class="badge bg-soft-primary text-primary">Catalog</span>
                    </div>
                    <h2 class="mb-1">@Model.TotalBooks</h2>
                    <small class="text-muted">All books in catalog</small>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card shadow-sm h-100 summary-card">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="text-muted mb-0">Issued Today</h6>
                        <span class="badge bg-soft-success text-success">Today</span>
                    </div>
                    <h2 class="mb-1">@Model.IssuedToday</h2>
                    <small class="text-muted">Books issued so far today</small>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card shadow-sm h-100 summary-card">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="text-muted mb-0">Overdue Issues</h6>
                        <span class="badge bg-soft-danger text-danger">Attention</span>
                    </div>
                    <h2 class="mb-1">@Model.OverdueCount</h2>
                    <small class="text-muted">Currently overdue items</small>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card shadow-sm h-100 summary-card">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="text-muted mb-0">Active Reservations</h6>
                        <span class="badge bg-soft-warning text-warning">Pending</span>
                    </div>
                    <h2 class="mb-1">@Model.ActiveReservations</h2>
                    <small class="text-muted">Pending / active reservations</small>
                </div>
            </div>
        </div>
    </div>

    <!-- CHARTS ROW -->
    <div class="row g-3 mb-4">
        <!-- Snapshot Chart -->
        <div class="col-lg-8">
            <div class="card shadow-sm h-100">
                <div class="card-header d-flex justify-content-between align-items-center bg-white">
                    <h5 class="card-title mb-0">Library Snapshot</h5>
                    <small class="text-muted">Today’s key metrics</small>
                </div>
                <div class="card-body chart-body-lg">
                    <canvas id="snapshotChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Fines Chart -->
        <div class="col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-header d-flex justify-content-between align-items-center bg-white">
                    <h5 class="card-title mb-0">Fines Overview</h5>
                    <small class="text-muted">Unpaid vs last collection</small>
                </div>
                <div class="card-body chart-body-sm">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Students with unpaid fines</span>
                            <span class="fw-semibold">@Model.StudentsWithUnpaidFines</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Total unpaid fine</span>
                            <span class="fw-semibold">@Model.TotalUnpaidFine.ToString("0.00")</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Last fine collected</span>
                            <span class="fw-semibold">@Model.LastFineCollected.ToString("0.00")</span>
                        </div>
                    </div>
                    <canvas id="finesChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- QUICK ACTIONS + OVERVIEW -->
    <div class="row g-3">
        <div class="col-lg-4">
            <div class="card shadow-sm mb-3 mb-lg-0">
                <div class="card-body">
                    <h5 class="card-title mb-3">Quick Actions</h5>
                    <div class="d-flex flex-column gap-2">
                        <a asp-controller="Librarian" asp-action="ManageBooks" class="btn btn-primary w-100">
                            Manage Books
                        </a>
                        <a asp-controller="Librarian" asp-action="Issues" class="btn btn-outline-secondary w-100">
                            View All Issues
                        </a>
                        <a asp-controller="Issue" asp-action="Index" class="btn btn-outline-primary w-100">
                            Issue / Return Books
                        </a>
                        <a asp-controller="Librarian" asp-action="Payments" class="btn btn-outline-success w-100">
                            Verify Payments
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title mb-3">Overview</h5>
                    <p class="text-muted mb-2">
                        Use this dashboard to keep track of library inventory, monitor overdue items,
                        handle fines and reservations, and quickly navigate to detailed management
                        pages using the actions on the left.
                    </p>
                    <p class="text-muted mb-0">
                        The charts above give you an at-a-glance view of how the library is performing
                        today — including issued books, overdue items, active reservations, and fine
                        activity.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .dashboard-page {
            padding-top: 0.75rem;
        }

        .summary-card {
            border: 0;
            border-radius: 1rem;
            transition: transform 0.15s ease, box-shadow 0.15s ease;
        }

            .summary-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 0.75rem 1.5rem rgba(15, 23, 42, 0.08);
            }

        .bg-soft-primary {
            background-color: rgba(59, 130, 246, 0.12);
        }

        .bg-soft-success {
            background-color: rgba(34, 197, 94, 0.12);
        }

        .bg-soft-danger {
            background-color: rgba(239, 68, 68, 0.12);
        }

        .bg-soft-warning {
            background-color: rgba(245, 158, 11, 0.12);
        }

        .badge.bg-soft-primary, .badge.bg-soft-success, .badge.bg-soft-danger, .badge.bg-soft-warning {
            font-weight: 500;
            border-radius: 999px;
            padding: 0.35rem 0.7rem;
            font-size: 0.7rem;
        }

        .chart-body-lg {
            position: relative;
            height: 220px;
        }

        .chart-body-sm {
            position: relative;
            height: 220px;
        }

            .chart-body-lg canvas, .chart-body-sm canvas {
                width: 100% !important;
                height: 100% !important;
            }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        (function () {
                    var totalBooks = @(Model?.TotalBooks ?? 0);
        var issuedToday = @(Model?.IssuedToday ?? 0);
           var overdueCount = @(Model?.OverdueCount ?? 0);
           var activeReservations = @(Model?.ActiveReservations ?? 0);

            var totalUnpaidFine = parseFloat("@Model.TotalUnpaidFine.ToString(System.Globalization.CultureInfo.InvariantCulture)");
            var lastFineCollected = parseFloat("@Model.LastFineCollected.ToString(System.Globalization.CultureInfo.InvariantCulture)");

            var snapshotCtx = document.getElementById('snapshotChart');
            if (snapshotCtx) {
                new Chart(snapshotCtx, {
                    type: 'line',
                    data: {
                        labels: ['Total Books', 'Issued Today', 'Overdue', 'Reservations'],
                        datasets: [{
                            label: 'Count',
                            data: [totalBooks, issuedToday, overdueCount, activeReservations],
                            borderWidth: 2,
                            fill: false,
                            tension: 0.3
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { display: false } },
                        scales: { y: { beginAtZero: true, ticks: { precision: 0 } }, x: { grid: { display: false } } }
                    }
                });
            }

            var finesCtx = document.getElementById('finesChart');
            if (finesCtx) {
                new Chart(finesCtx, {
                    type: 'pie',
                    data: {
                        labels: ['Total Unpaid Fine', 'Last Fine Collected'],
                        datasets: [{
                            data: [totalUnpaidFine, lastFineCollected],
                            borderWidth: 1
                        }]
                    },
                    options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { position: 'bottom' } } }
                });
            }
        })();
    </script>
}
