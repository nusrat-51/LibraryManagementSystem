@model LibraryManagementSystem.Models.Book

<h2>Add New Book</h2>

<form asp-action="CreateBook" method="post">
    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Author</label>
        <input asp-for="Author" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Category</label>
        <input asp-for="Category" class="form-control" placeholder="General or Premium" required />
    </div>

    <div class="form-group">
        <label>Total Copies</label>
        <input asp-for="TotalCopies" type="number" class="form-control" required />
    </div>

    <button class="btn btn-success mt-3" type="submit">Save</button>
    <a class="btn btn-secondary mt-3" asp-action="ManageBooks">Back</a>
</form>
