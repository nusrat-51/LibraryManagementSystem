@model LibraryManagementSystem.Models.BookApplication

@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewData["Title"] = "Edit Application Dates";
}

<div class="container-fluid py-3">
    <h2 class="mb-3">Edit Application Dates</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <strong>Application #@Model.Id</strong>
        </div>
        <div class="card-body">

            <div class="mb-3">
                <div class="text-muted small">Book</div>
                <div class="fw-semibold">@Model.Book?.Title (@Model.BookId)</div>
            </div>

            <div class="mb-3">
                <div class="text-muted small">Student ID</div>
                <div class="fw-semibold">@Model.StudentId</div>
            </div>

            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Issue Date</label>
                        <input type="date" class="form-control" name="issueDate" value="@Model.IssueDate.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Return Date</label>
                        <input type="date" class="form-control" name="returnDate" value="@Model.ReturnDate.ToString("yyyy-MM-dd")" />
                    </div>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="History" class="btn btn-outline-secondary">Back</a>
                </div>
            </form>

        </div>
    </div>
</div>
