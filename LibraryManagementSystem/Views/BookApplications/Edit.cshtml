@model LibraryManagementSystem.Models.BookApplication

@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewData["Title"] = "Edit Application Dates";
}

<div class="card shadow-sm">
    <div class="card-header bg-white">
        <h5 class="mb-0">Edit Dates</h5>
        <small class="text-muted">@Model.Book?.Title</small>
    </div>

    <div class="card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Issue Date</label>
                    <input class="form-control" name="issueDate" type="date" value="@Model.IssueDate.ToString("yyyy-MM-dd")" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Return Date</label>
                    <input class="form-control" name="returnDate" type="date" value="@Model.ReturnDate.ToString("yyyy-MM-dd")" />
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button class="btn btn-primary" type="submit">Save</button>
                <a class="btn btn-secondary" asp-action="History">Back</a>
            </div>
        </form>
    </div>
</div>
