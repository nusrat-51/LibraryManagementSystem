@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewData["Title"] = "Apply For Book";
}

<div class="container-fluid py-3">
    <h2 class="mb-3">Apply For Book</h2>

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <strong>Book Application</strong>
        </div>
        <div class="card-body">

            <form asp-action="Apply" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" name="bookId" value="@ViewBag.BookId" />
                <input type="hidden" name="studentId" value="@ViewBag.StudentId" />

                <div class="row g-3">

                    <div class="col-md-4">
                        <label class="form-label">Book ID</label>
                        <input class="form-control" value="@ViewBag.BookId" readonly />
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Normal ID (Student ID)</label>
                        <input class="form-control" value="@ViewBag.StudentId" readonly />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Title</label>
                        <input class="form-control" value="@ViewBag.Title" readonly />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Author</label>
                        <input class="form-control" value="@ViewBag.Author" readonly />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Issue Date</label>
                        <input type="date" class="form-control" name="issueDate" value="@ViewBag.IssueDate" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Return Date</label>
                        <input type="date" class="form-control" name="returnDate" value="@ViewBag.ReturnDate" />
                    </div>

                </div>

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a asp-controller="Student" asp-action="Dashboard" class="btn btn-outline-secondary">Cancel</a>
                </div>

            </form>

        </div>
    </div>
</div>
